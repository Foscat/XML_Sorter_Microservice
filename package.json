{
  "name": "mern_app-template",
  "version": "1.0.0",
  "description": "MERN app template",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Foscat/MERN_app-template.git"
  },
  "author": "Foscat",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": ">=0.18.1",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.7.5",
    "node-fetch": "^2.6.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "xml-js": "^1.6.11"
  },
  "bugs": {
    "url": "https://github.com/Foscat/MERN_app-template/issues"
  },
  "homepage": "https://github.com/Foscat/MERN_app-template#readme"
}
